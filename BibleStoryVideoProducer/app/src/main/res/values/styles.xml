<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <!-- ActionBar Styles -->
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/primary</item>
    </style>
    <style name="setupEditText">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/setup_edittext_paddingTopBot</item>
        <item name="android:paddingBottom">@dimen/setup_edittext_paddingTopBot</item>
        <item name="android:paddingLeft">@dimen/setup_edittext_paddingLefRig</item>
        <item name="android:paddingRight">@dimen/setup_edittext_paddingLefRig</item>
        <item name="android:layout_width">@dimen/setup_edittext_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textColorHint">@color/lightBlue</item>
    </style>

</resources>
